<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <CheckBox
        android:id="@+id/CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/softmgr_appshow_layout_height"/>

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/layout_width_zero"
        android:layout_height="@dimen/softmgr_appshow_layout_height"
        android:layout_weight="@string/num_one"/>

    <LinearLayout
        android:layout_width="@dimen/layout_width_zero"
        android:layout_height="@dimen/softmgr_appshow_layout_height"
        android:layout_weight="@string/num_four"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_zero"
            android:layout_weight="@string/num_one"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="@dimen/layout_width_zero"
                android:layout_height="match_parent"
                android:layout_weight="@string/num_one"
                android:gravity="center_vertical"
                android:maxLines="@string/num_one"
                android:textSize="@dimen/softmgr_appshow_txt_name"/>

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="@dimen/layout_width_zero"
                android:layout_height="match_parent"
                android:layout_weight="@string/num_one"
                android:gravity="right"
                android:maxLines="@string/num_one"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_zero"
            android:layout_weight="@string/num_one"
            android:gravity="center_vertical"
            android:maxLines="@string/num_one"/>
    </LinearLayout>
</LinearLayout>