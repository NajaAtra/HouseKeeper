<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/lead_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/lead_btn_layout_marginRight"
        android:layout_marginTop="@dimen/lead_btn_layout_marginTop"
        android:text="@string/lead_btn_jump"
        android:visibility="invisible"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/lead_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/lead_pagertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/lead_line_layout_margin"
        android:gravity="center">

        <ImageView
            android:id="@+id/lead_img1"
            style="@style/LeadImgStyle"
            android:src="@mipmap/adware_style_selected"/>

        <ImageView
            android:id="@+id/lead_img2"
            style="@style/LeadImgStyle"/>

        <ImageView
            android:id="@+id/lead_img3"
            style="@style/LeadImgStyle"/>

    </LinearLayout>
</RelativeLayout>
